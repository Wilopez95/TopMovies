<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wilop.topmovies.MainActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/Layout00"
            android:layout_width="93dp"
            android:layout_height="150dp"
            android:layout_column="0"
            android:layout_row="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="0"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView0"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    app:srcCompat="@drawable/preview" />

                <TextView
                    android:id="@+id/textView0a"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView0b"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="center" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Layout01"
            android:layout_width="93dp"
            android:layout_height="150dp"
            android:layout_column="1"
            android:layout_row="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="0"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    app:srcCompat="@drawable/preview" />

                <TextView
                    android:id="@+id/textView1a"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView1b"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="center" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Layout02"
            android:layout_width="93dp"
            android:layout_height="150dp"
            android:layout_column="2"
            android:layout_row="0"
            android:tag="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="0"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    app:srcCompat="@drawable/preview" />

                <TextView
                    android:id="@+id/textView2a"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView2b"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="center" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Layout03"
            android:layout_width="93dp"
            android:layout_height="150dp"
            android:layout_column="3"
            android:layout_row="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="0"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    app:srcCompat="@drawable/preview" />

                <TextView
                    android:id="@+id/textView3a"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView3b"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="center" />
            </LinearLayout>
        </RelativeLayout>
    </GridLayout>
</android.support.constraint.ConstraintLayout>
